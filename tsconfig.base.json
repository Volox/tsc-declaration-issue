{
    "compilerOptions": {
      // Output
      "declaration": true,
      "noEmit": false,
      "emitDeclarationOnly": true,
      // Lib paths
      "baseUrl": ".",
      "paths": {
        "lib1": ["./packages/lib1/src"],
        "lib2": ["./packages/lib2/src"],
      },
      // Compiler options
      "skipLibCheck": true,
      "module": "esnext",
      "target": "esnext",
      "lib": ["es6", "dom"],
      "jsx": "react",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
    }
  }
  